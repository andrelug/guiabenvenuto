extends partials/layout

block content
    

    include pageelements/header

    include pageelements/headerbairro

    div.collapse#collapseMap
        div#map.map
            iframe(width="600", frameborder="0", style="border:0;height:450px;margin-top:510px;", src="https://www.google.com/maps/embed/v1/place?q=#{docs.nomeBairro.replace(' ', '%20')}%2C%20#{docs.nomeCidade.replace(' ', '%20')}-%20#{docs.sigla}%2C%20Brasil&zoom=14&key=AIzaSyDMhw6VD8Yp0CekQoezYdl3JQkz0agJv1g")
    div.container.margin_60
        div.row
            div.col-md-8#single_tour_desc
                div#single_tour_feat
                    ul
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus
                        li
                            i.icon_set_1_icon-4
                            | Museus

                p.visible-sm.visible-xs
                    a.btn_map(data-toggle="collapse", href="#collapseMap", aria-expanded="false", aria-controls="collapseMap") Ver no Mapa
                
            aside.col-md-4
                p.hidden-sm.hidden-xs
                    a.btn_map(data-toggle="collapse", href="#collapseMap", aria-expanded="false", aria-controls="collapseMap") Ver no Mapa

        div.row
            div.col-md-3
                h3 Como é esse bairro
            div.col-md-9
                h4 #{docs.headline}
                p #{docs.descricao}

        div.row
            div.col-md-3
                h3 Conhecido por
                hr
                ul.list_ok
                    for conhecida in docs.conhecidaPor
                        li #{conhecida}
                
            div.col-md-9.margin_60
                div.row
                    div.col-md-6
                        div.box_style_4
                            i.icon_set_1_icon-82
                            h4
                                | Moradores 
                                span amam 
                                | porque
                            p #{docs.amam}

                    div.col-md-6
                        div.box_style_4
                            i.icon_set_1_icon-19
                            h4
                                | Moradores 
                                span reclamam 
                                | porque
                            p #{docs.reclamam}

    div.white_bg
        div.container.margin_60
            div.main_title
                p #{docs.frase1}
            div.row.magnific-gallery.add_bottom_60
                div.col-sm-4.text-center
                    a(href="#{docs.imagem1}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem1}")
                div.col-sm-4.text-center
                    a(href="#{docs.imagem2}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem2}")
                div.col-sm-4.text-center
                    a(href="#{docs.imagem3}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem3}")
                div.col-sm-6
                    a(href="#{docs.imagem4}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem4}")
                div.col-sm-6
                    a(href="#{docs.imagem5}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem5}")

    div.container.margin_60
        div.main_title
            h2 Anúncios em 
                span Destaque
            p #{docs.nomeBairro} é um bairro muito bom. Veja alguns anúncios na Benvenuto para ele?

        div.row
            for anuncio in docs.anuncios
                div.col-md-4.col-sm-6.wow.zoomIn(data-wow-delay="0.1s")
                    div.tour_container
                        div.img_container
                            a(href="#{anuncio.link}")
                                img.img-responsive(src="#{anuncio.imagem}")
                                div.short_info
                                    i.icon_set_1_icon-24
                                    | #{anuncio.tipo}

                        div.tour_title
                            h3
                                strong #{docs.bairro1word} 
                                |#{docs.bairro2word}
                            div.wishlist
                                a.tooltip_flip.tooltip-effect-1(href="javascript:void(0);") +
                                    span.tooltip-content-flip
                                        span.tooltip-back Lista de Favoritos

    div.white_bg
        div.container.margin_60
            div.main_title
                p #{docs.frase2}
            div.row.magnific-gallery.add_bottom_60
                div.col-sm-12.text-center
                    a(href="#{docs.imagem6}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem6}")
                div.col-sm-6
                    a(href="#{docs.imagem7}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem7}")
                div.col-sm-6
                    a(href="#{docs.imagem8}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem8}")
                
                    
                    

    div.container.margin_60
        div.main_title
            h2 Boas 
                span razões 
                | para morar aqui
        div.row
            for features in docs.razoes
                div.col-md-6.wow.fadeIn(data-wow-delay="0.1s")
                    div.feature
                        <i class="#{features.iconerazao}"></i>
                        h3
                            span #{features.razao} 
                            | 
                        p #{features.descricaorazao} 


    div.white_bg
        div.container.margin_60
            div.main_title
                p #{docs.frase3}
            div.row.magnific-gallery.add_bottom_60
                div.col-sm-4.text-center
                    a(href="#{docs.imagem9}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem9}")
                div.col-sm-4.text-center
                    a(href="#{docs.imagem10}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem10}")
                div.col-sm-4.text-center
                    a(href="#{docs.imagem11}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem11}")
                div.text-center.col-sm-12
                    p(style="margin-top:20px;") #{docs.frase4}
                div.col-sm-12.text-center
                    a(href="#{docs.imagem12}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem12}")
                div.col-sm-6
                    a(href="#{docs.imagem13", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem13}")
                div.col-sm-6
                    a(href="#{docs.imagem14}", title="titulo da foto")
                        img.img-responsive.styled(src="#{docs.imagem14}")

    div.container.margin_60
        div.main_title
            h2 O que 
                span falam 
                | sobre morar aqui
        div.row
            for review in docs.depoimentos
                div.col-md-6
                    div.review_strip
                        img.img-circle(src="#{review.imagem}")
                        h4 #{review.nome}
                        p #{review.texto}

    include pageelements/footer	